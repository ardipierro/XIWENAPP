rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {

    // Funci칩n helper para verificar que el usuario est치 autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Funci칩n helper para verificar que es una imagen
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // Funci칩n helper para verificar tama침o m치ximo (5MB)
    function isValidSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }

    // Carpeta de cursos - Solo usuarios autenticados pueden subir
    match /courses/{fileName} {
      allow read: if true; // Cualquiera puede leer (las im치genes son p칰blicas)
      allow write: if isAuthenticated()
                   && isImage()
                   && isValidSize();
    }

    // Carpeta de ejercicios
    match /exercises/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated()
                   && isImage()
                   && isValidSize();
    }

    // Carpeta de avatares de usuarios
    match /avatars/{userId}/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated()
                   && request.auth.uid == userId
                   && isImage()
                   && isValidSize();
    }

    // Carpeta de correcciones r치pidas de tareas (Quick Homework Corrections)
    // Students can upload homework images to their own folder
    match /messages/quick-corrections/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
                   && request.auth.uid == userId
                   && isImage()
                   && isValidSize();
    }

    // Carpeta de tareas (Manual Homework Upload)
    // Teachers/admins can upload homework images for students
    match /homework/{teacherId}/{studentFolder}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
                   && request.auth.uid == teacherId
                   && isImage()
                   && isValidSize();
    }

    // 游 Carpeta de cach칠 de audios generados por TTS
    // Cachea audios de ElevenLabs y otros proveedores TTS para evitar regeneraci칩n
    match /audio-cache/{allPaths=**} {
      // Cualquier usuario autenticado puede leer y listar audios cacheados
      allow read, list: if isAuthenticated();

      // Cualquier usuario autenticado puede escribir audios
      // Verificar que sea un archivo de audio y tama침o razonable (max 1MB)
      allow write: if isAuthenticated()
                   && request.resource.contentType.matches('audio/.*')
                   && request.resource.size < 1 * 1024 * 1024;

      // Permitir eliminaci칩n solo a usuarios autenticados
      allow delete: if isAuthenticated();
    }

    // 游 Carpeta de mensajes (chat privado)
    // Permite que usuarios autenticados suban archivos, im치genes y audios en sus conversaciones
    match /messages/{conversationId}/{fileName} {
      // Cualquier usuario autenticado puede leer archivos en conversaciones
      // TODO: Mejorar para verificar que el usuario pertenece a la conversaci칩n
      allow read: if isAuthenticated();

      // Permitir subir archivos si:
      // 1. Usuario est치 autenticado
      // 2. Es imagen, audio o documento
      // 3. Tama침o m치ximo 10MB (para permitir documentos y audios largos)
      allow write: if isAuthenticated()
                   && (request.resource.contentType.matches('image/.*')
                       || request.resource.contentType.matches('audio/.*')
                       || request.resource.contentType.matches('application/pdf')
                       || request.resource.contentType.matches('application/msword')
                       || request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.*')
                       || request.resource.contentType.matches('text/plain')
                       || request.resource.contentType.matches('application/zip'))
                   && request.resource.size < 10 * 1024 * 1024;

      // Permitir eliminaci칩n a usuarios autenticados
      allow delete: if isAuthenticated();
    }

    // Carpeta de banners de usuario (para perfiles, etc.)
    match /banners/{fileName} {
      allow read: if true; // Cualquiera puede leer
      allow write: if isAuthenticated()
                   && isImage()
                   && isValidSize();
    }

    // Bloquear todo lo dem치s por defecto
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
